!!! 5
%html
  %head
    %title #{tr('Start')}
    :css
      /* Bootstrap */
      a {
        color: #428bca;
        text-decoration: none;
      }
      a:hover,
      a:focus {
        color: #2a6496;
        text-decoration: underline;
      }
      a:focus {
        outline: thin dotted;
        outline: 5px auto -webkit-focus-ring-color;
        outline-offset: -2px;
      }
      /* Global */
      body {
        background-image: url("#{rc.wallpaper_url()}");
        background-size: cover;
        font: 1em arial,helvetica,clean,sans-serif;
        text-align: center;
        /* Remove bootstrap margin-top */
        margin-top: -20px;
      }
      .site { margin-bottom: 15px; }
      .col-2 { width: 50%; display: inline-block; float: left }
      .col-1 { width: 25%; display: inline-block; float: right }
      .background {
        position: fixed;
        z-index: -999;
        left: 0; right: 0; top: 0; bottom: 0;
        background-color: rgba(255,255,255,0.85);
      }
      /* text-minor */
      .title { color: #888 }
      .title:hover { color: #555 }
      /* img-shadow */
      .img-shadow:hover {
        -webkit-box-shadow: 0 0 6px blue;
        -moz-box-shadow: 0 0 6px blue;
        box-shadow: 0 0 6px blue;
      }
      .img-shadow {
        -webkit-box-shadow: 0 0 6px #333;
        -moz-box-shadow: 0 0 6px #333;
        box-shadow: 0 0 6px #333;
      }
      /* game */
      .game img { max-width: 100%; margin: 10px }
  %body
    .background
    .container
      ; http://stackoverflow.com/questions/1964297/split-div-into-2-columns-using-css
      %br(style="clear:both")
      .col-2
        %section
          %h3.title Game
          -for url,name,img in \
              ("www.dmm.co.jp/netgame/social/-/gadgets/=/app_id=534991", "対魔忍アサギ～決戦アリーナ～ (DMM.jp)", "http://153.121.52.138/proxy/blogimg/hiroji162/imgs/9/4/94ea9f89.png"),
            %div(class="game")
              %a(href="http://#{url}",title="#{url}") #{name}
              -if img
                %a(href="http://#{url}")
                  %img(class="img-shadow",src="#{cache.image(img)}",alt="画像",title="#{name}")
      .col-1
