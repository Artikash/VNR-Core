; topicsview.haml
; 8/29/2014 jichi
; @param  host  str
; @param  topicId  long
; @param  userName  string
; @param  userPassword  string
; @param  title  unicode
; @param  rc  rc
; @param  tr  sktr.tr_
;!!! 5

%html(lang="ja")
  %head
    %title #{title}

    ; Stylesheets
    -for it in 'bootstrap3.css', 'font-awesome4.css', \
        'reader/forum/posts.css', 'reader/topicsview.css'
      %link(rel="stylesheet",href="#{rc.cdn_url(it)}")

    :css
      body {
        background-image: url("#{rc.wallpaper_url()}");
        background-size: cover;
      }

  %body
    .view
      .sec.sec-chat(data-topic-id="#{topicId}")
        .sec-btn.btn.btn-sm.btn-pill.btn-checkable.checked #{tr('Chat')}
        .btn.btn-sm.btn-default.new-chat
          %span.fa.fa-plus
          #{tr('Chat')}
        .sec-content
          .forum-posts
          .footer
            %a.btn.btn-link.btn-more(role="button")
              #{tr('More')}
    #spin

    :javascript
      window.HOST = "#{host}";
      window.CHAT_TOPIC_ID = #{topicId};
      window.USER_NAME = "#{userName}";
      window.USER_PASSWORD = "#{userPassword}";

    -for it in \
        'jquery', 'jquery.ui', \
        'bootstrap.growl', \
        'underscore', \
        'spin', 'jquery.spin', \
        'bbcode', 'haml', 'moment', \
        'libs/linkify', \
        'share/growl', 'share/rest', 'share/util', \
        'reader/forum/posts', 'reader/topicsview'
      %script(src="#{rc.cdn_url(it)}")

; EOF
